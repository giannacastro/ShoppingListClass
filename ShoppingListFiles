//represents a shopping cart to hold item orders

import java.util.ArrayList;
import java.util.List;

public class ShoppingCart {

    //main method
    public static void main(String[] args) {

    }

    //list to hold the item orders
    private List<ItemOrder> itemList;

    //constructor initializes item list
    public ShoppingCart() {
        itemList = new ArrayList<>();
    }

    //adds an item order to the cart
    public void addItem(ItemOrder itemOrder) {
        itemList.add(itemOrder);
    }

    //removes an item order from the cart
    public void removeItem(ItemOrder itemOrder) {
        itemList.remove(itemOrder);
    }

    //getter for the item list
    public List<ItemOrder> getItemList() {
        return itemList;
    }

    //calculates the total price of items
    public double calculateTotalPrice() {
        double totalPrice = 0;
        for (ItemOrder itemOrder : itemList) {
            totalPrice += itemOrder.getTotalPrice();
        }
        return totalPrice;
    }

}
